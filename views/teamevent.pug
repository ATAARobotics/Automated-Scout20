extends header

block content
    #matches(style="display:none")= JSON.stringify(matches)
    #pit(style="display:none")= JSON.stringify(pit)
    link(rel='stylesheet', href='/css/vis.min.css')
    link(rel='stylesheet', href='/DataTables/datatables.min.css')
    script(src='/js/vis.min.js')
    script(src='/DataTables/datatables.min.js')
    script(src='/js/natural.js')
    script(src='/js/Chart.min.js')
    script(src='/js/moment.min.js')
    script(src='/js/teamevent.js')
    style.
        div.dt-button-collection.fixed.four-column {
            margin-left: -500px;
            width: 1000px;
        }
        div.dataTables_scrollBody table tbody tr {
            height: auto !important;
        }
    h1 Team #{team.team_number} #{team.nickname}
    h6 #{team.city}, #{team.state_prov}, #{team.country}
    .row
        .col-sm-4
            img#photo1.img-fluid
        .col-sm-4
            img#photo2.img-fluid
        .col-sm-4
    .row
        .col-12
            h1 Pit
    .row
        .col-12
            table#pit-table.display.cell-border(width='100%', style="table-layout: fixed;")
    .row
        .col-12
            h1 Match
    .row
        .col-12
            table#match-table.display.cell-border(width="100%", style="table-layout: fixed;")
    .row
        .col-12
            h1 Chart
    .row
        .col-12
            select#yaxis.custom-select.mr-sm-2
                option(value='' selected) Choose...
                option(value='4') Moved Baseline
                option(value='5') Auto Cells Pickup
                option(value='6') Auto Cells Dropped
                option(value='7') Auto Cells Low
                option(value='8') Auto Cells High
                option(value='9') Auto Cells Inner
                option(value='10') Auto Cells Assist
                option(value='11') Auto Cell Accuracy
                option(value='12') Teleop Cells Pickup
                option(value='13') Teleop Cells Dropped
                option(value='14') Teleop Cells Low
                option(value='15') Teleop Cells High
                option(value='16') Teleop Cells Inner
                option(value='17') Teleop Cells Assist
                option(value='18') Assist Frequency
                option(value='19') Teleop Cell Accuracy
                option(value='20') Cell Accuracy
                option(value='21') Position Control
                option(value='22') Rotation Control
                option(value='23') Climbs
                option(value='24') Climb and Balance
                option(value='25') Park
                option(value='26') Speed
                option(value='27') Stability
                option(value='28') Defense
                option(value='29') Primary Defense
                option(value='30') Broken
                option(value='31') Dead
                option(value='32') Points Earned
            canvas#match-chart(width="100%", height="50")
